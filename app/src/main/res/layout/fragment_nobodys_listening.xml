<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.NobodysListeningFragment">

    <ImageView
        android:id="@+id/girls"
        android:src="@drawable/girls_and_megafon"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="@string/nobodys_listening_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/girls"/>
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/nobodys_listening_subtitle"
        android:textColor="#4a81b6"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:text="@string/nobodys_listening_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"/>
    <Button
        android:id="@+id/golden_rules_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/golden_rules"
        style="@style/small_button_style"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activist_toolkit_button"/>
    <Button
        android:id="@+id/activist_toolkit_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/activist_toolkit"
        style="@style/small_button_style"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>