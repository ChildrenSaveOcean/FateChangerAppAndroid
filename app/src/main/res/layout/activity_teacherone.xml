<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fatechanger.Teacherone"
    android:background="@drawable/teacher1">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:background="@android:color/transparent"
        android:alpha="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-14dp"
        android:layout_marginLeft="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/home"
        android:layout_toEndOf="@+id/home"
        android:alpha="1"
        android:background="@android:color/transparent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/photovideo"
        android:layout_alignTop="@+id/location"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:background="@android:color/transparent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/donation"
        android:layout_alignBottom="@+id/location"
        android:layout_toEndOf="@+id/location"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="-12dp"
        android:alpha="1"
        android:background="@android:color/transparent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Tips"
        android:layout_alignTop="@+id/donation"
        android:layout_alignParentEnd="true"
        android:alpha="1"
        android:background="#000000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/share"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="-10dp"
        android:alpha="1"
        android:background="#000000" />

    <Button
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:id="@+id/teacher"
        android:layout_above="@+id/location"
        android:layout_toStartOf="@+id/Tips"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent" />
</RelativeLayout>
