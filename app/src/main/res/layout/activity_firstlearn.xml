<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fatechanger.firstlearn"
    android:background="@drawable/firstpreview">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-20dp"
        android:background="@drawable/check" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/goback"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:alpha="1"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:id="@+id/spread"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:alpha="1"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/write"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/spread"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="New Button"
        android:id="@+id/changefate"
        android:layout_alignTop="@+id/write"
        android:layout_toEndOf="@+id/write"
        android:background="@android:color/transparent" />
</RelativeLayout>
